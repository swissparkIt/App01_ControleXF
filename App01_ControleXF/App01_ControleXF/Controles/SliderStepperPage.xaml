<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.SliderStepperPage">
    <ContentPage.Content>
        <StackLayout>

            <Slider x:Name="sld1"  
                    Minimum="0"
                    Maximum="100"
                    Value="20"
                    ValueChanged="sld1_Changed"
                    
                    />

            <Label x:Name="SliderResult" />

            <Stepper x:Name="stp1" Minimum="0" Maximum="10" Increment="2" Value="2" ValueChanged="stp1_Chenged" />

            <Label x:Name="StepperResult" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>